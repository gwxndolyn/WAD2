rules_version = '2';

// Firebase Storage rules for ShareLah tool rental app
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to upload images to their own listings folder
    match /listings/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow anyone to read images (for public viewing of listings)
    match /listings/{userId}/{allPaths=**} {
      allow read: if true;
    }

    // Allow authenticated users to upload profile images
    match /profiles/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read all profile images
    match /profiles/{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Test folder for debugging (remove in production)
    match /test/{allPaths=**} {
      allow read, write: if request.auth != null;
    }

    // Default rule: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}